<Window x:Class="SmartHouse.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHouse"
        mc:Ignorable="d"
        Title="Profile" Height="500" Width="902" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" Background="#FFF5F0FF" Topmost="True">
    <Grid>
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="10" Direction="330" Color="Black" Opacity="0.9" BlurRadius="5" RenderingBias="Quality"/>
        </Grid.Effect>
        <StackPanel Orientation="Horizontal" Background="#FFCAB5FE" Height="40" VerticalAlignment="Top" Grid.ColumnSpan="2" >
            <Button x:Name="Close" Width="40" Height="40" Margin="860,0,0,0" Panel.ZIndex="1"  Style="{StaticResource ButtonStateMenu}" IsCancel="True" Click="Close_Click" >
                <Image Source="/Image/closes.png"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>

